<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds">
    <appender name="CONSOLE-LOG" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] %thread %level %class{36} [%file:%line] - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="DEBUG">
        <appender-ref ref="CONSOLE-LOG" />
    </root>
    <logger name="soot.dexpler.DexBody" level="INFO" />
    <logger name="soot.jimple.infoflow.android.resources.ARSCFileParser" level="OFF"/>
    <logger name="soot.PackManager" level="INFO" />
</configuration>
